# PyFlow Production Environment Configuration
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-change-this-in-production
DATABASE_URL=postgresql://pyflow:secure-password@postgres:5432/pyflow
REDIS_URL=redis://redis:6379
POSTGRES_DB=pyflow
POSTGRES_USER=pyflow
POSTGRES_PASSWORD=secure-database-password
DOMAIN=your-domain.com
SSL_ENABLED=true

# API Configuration
API_VERSION=v1
DEBUG=false
CORS_ORIGINS=https://your-domain.com

# Database Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Redis Configuration
REDIS_MAX_CONNECTIONS=20
REDIS_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/pyflow/app.log

# Security
ALLOWED_HOSTS=your-domain.com
SECURE_COOKIES=true
CSRF_PROTECTION=true